<Application x:Class="RedSharp.Dali.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:RedSharp.Dali.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/RedSharp.Dali.Controls;component/Themes/General.xaml"/>
                <ResourceDictionary Source="Resources/Strings/Strings.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:SharpImageToBitmapSourceConverter x:Key="SharpImageToBitmapSourceConverter"/>
            
            <BitmapImage x:Key="AppIcon" UriSource="/Resources/Images/Icon.png"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
